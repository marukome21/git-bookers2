<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr><td>name</td><td><%= @user.name %></td></tr>
          <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
        </tbody>
      </table>

      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% else %>
        <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %><br/>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>



    <div class="col-md-8 offset-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr><th></th><th>Title</th><th>Opinion</th></tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr><td><%= image_tag book.user.get_profile_image(100,100) %></td><td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td><td><%= book.body %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>