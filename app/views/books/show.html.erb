<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'list', locals: { user: @user, book: @book } %>
    </div>

    <div class="col-md-8 offset-1">
      <h1>Book detail</h1>

      <table class="table">
        <% if @books.user == current_user %>
          <tbody>
            <tr>
              <td><%= image_tag @books.user.get_profile_image(100,100) %></td>
              <td><%= @books.user.name %></td>
              <td><%= @books.title %></td>
              <td><%= @books.body %></td>
              <td><%= link_to "Edit", edit_book_path(@books) %></td>
              <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
            </tr>
          </tbody>
        <% else %>
          <tbody>
            <tr><td><%= image_tag @books.user.get_profile_image(100,100) %><%= @books.user.name %></td><td><%= @books.title %></td><td><%= @books.body %></td></tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>