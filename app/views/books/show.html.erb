<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr><td>name</td><td><%= @user.name %></td></tr>
          <tr><td>introduction</td><td><%= @user.introduction %></td></tr> 
        </tbody>
      </table>

      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% else %>
        <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
	
      <h4>Opinion</h4>
      <%= f.text_area :body %><br/>
	
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-1">
      <h1>Book detail</h1>
      
      <table class="table">
        <% if @user == current_user %>
          <tbody>
            <tr><td><%= image_tag @user.get_profile_image(100,100) %><%= @user.name %></td><td><%= @books.title %></td><td><%= @books.body %></td><td><%= link_to "Edit", edit_books_path(@books) %></td><td><%= link_to "Destroy", book_path(@books), method:delete %></td></tr>
          </tbody>
        <% else %>
          <tbody>
            <tr><td><%= image_tag @user.get_profile_image(100,100) %><%= @user.name %></td><td><%= @books.title %></td><td><%= @books.body %></td></tr>
          </tbody>
        <% end %>
      </table> 
      
      
      
    </div>
  
  
    
  </div>
</div>