<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'list', locals: { user: @user, book: @book } %>
    </div>
    
    <div class="col-md-8 offset-1">
      <h1>Book detail</h1>
      
      <table class="table">
        <% if @user == current_user %>
          <tbody>
            <tr><td><%= image_tag @user.get_profile_image(100,100) %><%= @user.name %></td><td><%= @books.title %></td><td><%= @books.body %></td><td><%= link_to "Edit", edit_books_path(@books) %></td><td><%= link_to "Destroy", book_path(@books), method:delete %></td></tr>
          </tbody>
        <% else %>
          <tbody>
            <tr><td><%= image_tag @user.get_profile_image(100,100) %><%= @user.name %></td><td><%= @books.title %></td><td><%= @books.body %></td></tr>
          </tbody>
        <% end %>
      </table> 
      
      
      
    </div>
  
  
    
  </div>
</div>