<div class="container px-5 px-sm-0">
  <div class="row">
      <%= render partial: 'books/list', locals: { user: @user, book: @book } %>
    <div class="col-md-8 offset-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr><th></th><th>Title</th><th>Opinion</th></tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr><td><%= image_tag book.user.get_profile_image(100,100) %></td><td><%= link_to book.title, book_path(params[:id]) %></td><td><%= book.body %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>