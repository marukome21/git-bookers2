<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'books/list', locals: { user: @user, book: @book } %>
    </div>



    <div class="col-md-8 offset-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr><th></th><th>Title</th><th>Opinion</th></tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr><td><%= image_tag book.user.get_profile_image(100,100) %></td><td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td><td><%= book.introduction %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>